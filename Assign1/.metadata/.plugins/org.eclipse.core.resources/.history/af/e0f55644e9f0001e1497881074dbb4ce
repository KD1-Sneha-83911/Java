import java.util.Scanner;

public class One {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num;
		
		System.out.println("Enter a number : ");
		
		num = sc.nextInt();
		System.out.println("Entered number is : "+ num);
		System.out.println("The binary form of the number is :"+ Integer.toBinaryString(num));
		System.out.println("The Octal form of the number is :"+ Integer.toOctalString(num));
		System.out.println("The Hexadecimal form of the number is :"+ Integer.toHexString(num));
		sc.close();
	}

}
